{% extends 'base.html.twig' %}

{% block title %}Hello DocumentationController!
{% endblock %}

{% block body %}
<main class="centre container-fluid">
			<div class="row d-flex justify-content-around">
			
{% for Plante in Plantes %}
    <div class="card col-3 my-4" style="width: 18rem;">
        <img src="{{ asset('images/' ~ Plante.image )}}" class="card-img-top" alt="...">
        <div class="card-body d-flex align-items-end">
            <h5 class="card-title">{{ Plante.nom }}</h5>
        </div>
            <a href="{{ url('home') }}/{{ Plante.id }}" class="btn btn-primary mb-2">Voir</a>
    </div>

{% endfor %}
			</div>
			</main>
  


    
{% endblock %}