{% extends 'base.html.twig' %}

{% block title %}Hello DocumentationController!
{% endblock %}

{% block body %}
<main class="centre container-fluid">
			<div class="row d-flex justify-content-around">
			
{% for Plante in Plantes %}
<div class="card col-lg-4 col-sm-6 my-4">

        <img src="{{ asset('images/' ~ Plante.image )}}" class="card-img-top rounded-circle h-50" alt="...">
        <div class="card-body d-flex flex-column justify-content-end">
            <h5 class="card-title text-center">{{ Plante.nom }}</h5>
        </div>
            <a href="{{ url('home') }}/{{ Plante.id }}" class="btn btn-success mb-2 text-center" style="height: 3rem;">Voir</a>
</div>

{% endfor %}
			</div>
			</main>
    
{% endblock %}