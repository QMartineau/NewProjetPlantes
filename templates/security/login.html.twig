{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}




{% block body %}
	<link rel="stylesheet" href="../styles/footer.css">
	<link rel="stylesheet" href="../styles/login.css">
	<form method="post" class="formulaire d-flex align-items-center">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes bien connecté en tant que
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}
		<div class="col-12" id="connexion">
			<div class="col-8 mx-auto">
				<h1 class="h3 mb-3 font-weight-bold text-center">Connexion</h1>
				<label for="inputEmail">Email</label>
				<input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="pt-4">
					<button class="btn btn-lg btn-primary mx-auto d-block" type="submit">
						Se connecter
					</button>
				</div>
			</div>
		</div>
		{#
		        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		        See https://symfony.com/doc/current/security/remember_me.html
		
		        <div class="checkbox mb-3">
		            <label>
		                <input type="checkbox" name="_remember_me"> Remember me
		            </label>
		        </div>
		    #}
	</form>
<div class="img" id="fin"></div>



{% endblock %}



