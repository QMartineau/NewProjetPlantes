{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}




{% block body %}
	<link rel="stylesheet" href="../styles/login.css">
	<form method="post" class="formulaire d-flex flex-column align-items-center">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="col-12 col-md-6 col-lg-4 mx-auto" id="connexion">
			<div>
				<h1 class="mb-1 font-weight-bold text-center">Connexion</h1>
				<label for="inputEmail">Email</label>
				<input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="pt-4">
					<button class="btn btn-lg btn-primary mx-auto d-block" type="submit">
						Se connecter
					</button>
				</div>
			</div>
		</div>		    
	</form>
<div class="img" id="fin"></div>
{% endblock %}



