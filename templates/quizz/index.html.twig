{% extends 'base.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('../styles/quiz.css')}}">

<body>
<div class="container text-center">
	<div id="quiz" class="d-flex flex-column justify-content-center">
		<h1 class="text-center">
			<span>Q</span>UIZ
			<i class="far fa-question-circle"></i>
		</h1>
		<h2 id="question"></h2>
		<h3 id="score"></h3>

		<div class="choices d-flex flex-wrap justify-content-around">
			<button id="guess0" class="btn">
				<p id="choice0" class="m-0"></p>
			</button>
			<button id="guess1" class="btn">
				<p id="choice1" class="m-0"></p>
			</button>
			<button id="guess2" class="btn">
				<p id="choice2" class="m-0"></p>
			</button>
			<button id="guess3" class="btn">
				<p id="choice3" class="m-0"></p>
			</button>
		</div>

		<p id="progress"></p>

	</div>
</div>
<div class="img" id="fin">
</div>

</body>

<script src="../script/quiz.js"></script>

{% endblock %}